{% extends '::base.html.twig' %}

{% block right_content -%}
    <h1><i class="icon-circle-info icon-largest" title="Show"></i> <small>{{ entity.coursename | capitalize }} Training Details</small></h1>

    <table class="record_properties table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Course Name</th>
                <td>{{ entity.coursename }}</td>
            </tr>
            <tr>
                <th>Course Location</th>
                <td>{{ entity.courselocation }}</td>
            </tr>
            <tr>
                <th>Sponsor</th>
                <td>{{ entity.sponsor }}</td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td>{{ entity.startdate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>End Date</th>
                <td>{{ entity.enddate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Datecreated</th>
                <td>{{ entity.datecreated|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Lastupdated</th>
                <td>{{ entity.lastupdated|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions inline">
    <li>
        <a href="{{ path('training_list_byrecord', { 'recordid': entity.record.id }) }}" class="btn">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('training_edit', { 'id': entity.id }) }} class="btn"">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('training_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
