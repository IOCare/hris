{% extends '::base.html.twig' %}

{% block right_content -%}
    <h1><i class="icon-edit icon-largest" title="Edit"></i><small>History edit</small></h1>

    <form action="{{ path('history_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_widget(edit_form) }}

        {{ form_row( edit_form.startdate ) }}
        {{ form_row( edit_form.reason ) }}

        {{ form_row( edit_form.updaterecord ) }}
        <br/>
        <ul class="record_actions inline" style="float:left;">
            <li>
                <button type="submit" class="btn">Edit</button>
            </li>
            <li>
                <a href="{{ path('history_list_byrecord', { 'recordid': entity.record.id }) }}" class="btn">
                    Back to the list
                </a>
            </li>
        </ul>
        {{ form_end(edit_form) }}
{% endblock %}
